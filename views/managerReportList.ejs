<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DaliBike</title>
    <style>
        @font-face {
            font-family: 'KBO-Dia-Gothic_medium';
            src: url('https://fastly.jsdelivr.net/gh/projectnoonnu/noonfonts_2304-2@1.0/KBO-Dia-Gothic_medium.woff') format('woff');
            font-weight: 500;
            font-style: normal;
        }
        * {
            font-family: 'KBO-Dia-Gothic_medium', sans-serif;
        }
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .pendingList {
            background-color: #8d9f5a;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin: 2px;
        }

        .pendingList:hover {
            background-color: #5d683f;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 80%;
            max-width: 1000px;
            overflow: auto; /* Allows scrolling */
            max-height: 500px; /* Sets the maximum height of the container */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 8px 12px;
            border: 1px solid #ddd;
            text-align: center;
        }

        th {
            background-color: #f4f4f4;
        }

        button {
            font-size: 16px;
        }

        .action-button {
            color: #fff;
            background-color: #8d9f5a;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin: 2px;
        }
        
        .action-button:hover {
            background-color: #7f8c5a;
        }

        .approve-button {
            background-color: #4CAF50; /* Green */
        }

        .approve-button:hover {
            background-color: #3a853e;
        }

        .reject-button {
            background-color: #f44336; /* Red */
        }

        .reject-button:hover {
            background-color: #ce3230;
        }

        .large-image {
            max-width: 60%;
            height: auto;
        }

        @media screen and (max-width: 800px) {
            table, th, td {
                font-size: 0.8em; /* Adjusts the font size when the screen is 800px or less */
            }
        }

        @media screen and (max-width: 500px) {
            .hide-on-small-screen {
                display: none; /* Hides the elements when the screen is 500px or less */
            }

            table, thead, tbody, th, td, tr {
                display: block;
            }

            td:before {
                content: attr(data-th);
                font-weight: bold;
                display: inline-block;
                width: 100%;
                background-color: #f4f4f4;
            }

            .large-image {
                max-width: 100%;
                height: auto;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Manage Report List</h1>
                <!-- 등록 대기 목록 테이블 -->
                <div id="reportListContainer">
                    <div style="text-align: center;">
                        <button class="pendingList selected" onclick="toggleList('reportListContainer', this)">등록 대기 목록</button>
                        <button class="pendingList" onclick="toggleList('deleteReportListContainer', this)">삭제 대기 목록</button>
                    </div>
                    <table id="reportTable">
                        <thead>
                            <tr>
                                <th>Report ID</th>
                                <th>Requested DateTime</th>
                                <th>User ID</th>
                                <th>Type</th>
                                <th>Latitude</th>
                                <th>Longitude</th>
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="reportList">
                            <% if (reportList.length === 0) { %>
                                <tr>
                                    <td colspan="8">데이터 없음</td>
                                </tr>
                            <% } else { %>
                                <% reportList.forEach(report => { %>
                                    <tr>
                                        <td data-th="Report ID"><%= report.reportId %></td>
                                        <td data-th="Requested DateTime"><%= report.requestedDateTime %></td>
                                        <td data-th="User ID"><%= report.USERId %></td>
                                        <td data-th="Type"><%= report.type === 0 ? '포트홀' : '공사현장' %></td>
                                        <td data-th="Latitude" class="hide-on-small-screen"><%= report.Latitude %></td>
                                        <td data-th="Longitude" class="hide-on-small-screen"><%= report.Longitude %></td>
                                        <td data-th="Image">
                                            <button class="action-button" onclick="toggleImage_register(this, '<%= report.image %>')">사진 보기</button>
                                        </td>
                                        <td data-th="Actions">
                                            <button class="action-button approve-button" onclick="handleAction(<%= report.reportId %>, <%= report.type %>, 'registerApprove')">승인</button>
                                            <button class="action-button reject-button" onclick="handleAction(<%= report.reportId %>, <%= report.type %>, 'registerReject')">거절</button>
                                        </td>
                                    </tr>
                                    <tr class="image-row1" style="display: none;">
                                        <td colspan="8">
                                            <img src="..\<%= report.image %>" alt="Report Image" class="large-image">
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } %>
                        </tbody>
                    </table>
                </div>

<!-- 삭제 대기 목록 테이블 -->
<div id="deleteReportListContainer" style="display: none;">
    <div style="text-align: center;">
        <button class="pendingList selected" onclick="toggleList('reportListContainer', this)">등록 대기 목록</button>
        <button class="pendingList" onclick="toggleList('deleteReportListContainer', this)">삭제 대기 목록</button>
    </div>
    <table id="deleteReportTable">
        <thead>
            <tr>
                <th>Report ID</th>
                <th>Requested DateTime</th>
                <th>User ID</th>
                <th>Type</th>
                <th>Report Image</th>
                <th>Removal Request Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="deleteReportList">
            <% if (deleteReportList.length === 0) { %>
                <tr>
                    <td colspan="7">데이터 없음</td>
                </tr>
            <% } else { %>
                <% deleteReportList.forEach(report => { %>
                    <tr>
                        <td data-th="Report ID"><%= report.reportId %></td>
                        <td data-th="Requested DateTime"><%= report.requestedDateTime %></td>
                        <td data-th="User ID"><%= report.USERId %></td>
                        <td data-th="Type"><%= report.type === 0 ? '포트홀' : '공사현장' %></td>
                        <td data-th="Report Image">
                            <button class="action-button" onclick="toggleImage_register(this, '<%= report.reportImage %>')">사진 보기</button>
                        </td>
                        <td data-th="Removal Request Image">
                            <button class="action-button" onclick="toggleImage_delete(this, '<%= report.removalRequestImage %>')">사진 보기</button>
                        </td>
                        <td data-th="Actions">
                            <button class="action-button approve-button" onclick="handleAction(<%= report.reportId %>, <%= report.type %>, 'removalApprove')">승인</button>
                            <button class="action-button reject-button" onclick="handleAction(<%= report.reportId %>, <%= report.type %>, 'removalReject')">거절</button>
                        </td>
                    </tr>
                    <tr class="image-row1" style="display: none;">
                        <td colspan="7">
                            <img src="..\<%= report.reportImage %>" alt="Report Image" class="large-image">
                        </td>
                    </tr>
                    <tr class="image-row2" style="display: none;">
                        <td colspan="7">
                            <img src="..\<%= report.removalRequestImage %>" alt="Removal Request Image" class="large-image">
                        </td>
                    </tr>
                <% }); %>
            <% } %>
        </tbody>
    </table>
</div>
</div>

<script>
function toggleList(containerId, button) {
    // 모든 컨테이너를 숨깁니다.
    const containers = document.querySelectorAll('.container > div');
    containers.forEach(container => container.style.display = 'none');
    
    // 선택된 버튼에만 'selected' 클래스를 추가합니다.
    const buttons = document.querySelectorAll('.pendingList');
    buttons.forEach(btn => btn.classList.remove('selected')); // 모든 버튼에서 'selected' 클래스를 제거합니다.
    button.classList.add('selected'); // 클릭된 버튼에 'selected' 클래스를 추가합니다.
    
    // 해당하는 컨테이너를 표시합니다.
    document.getElementById(containerId).style.display = 'block';
}


function toggleImage_register(button, imageUrl) {
    const row = button.closest('tr');
    const nextRow = row.nextElementSibling;

    if (nextRow && nextRow.classList.contains('image-row1')) {
        // 이미지 행이 존재하면 해당 행을 토글
        nextRow.style.display = nextRow.style.display === 'none' ? 'table-row' : 'none';
    } else {
        // 이미지 행이 없으면 새로운 행 생성
        const newRow = document.createElement('tr');
        newRow.classList.add('image-row1');
        const newCell = document.createElement('td');
        newCell.colSpan = row.cells.length;
        const img = document.createElement('img');
        img.src = imageUrl;
        img.alt = 'Report Image';
        img.classList.add('large-image');
        newCell.appendChild(img);
        newRow.appendChild(newCell);
        row.parentNode.insertBefore(newRow, nextRow); // 다음 행이 아닌 그냥 다음에 삽입
    }
    button.textContent = nextRow.style.display === 'none' ? '사진 보기' : '사진 숨기기';
}

function toggleImage_delete(button, imageUrl) {
    const row = button.closest('tr').nextElementSibling;
    const nextRow = row.nextElementSibling;

    if (nextRow && nextRow.classList.contains('image-row2')) {
        // 이미지 행이 존재하면 해당 행을 토글
        nextRow.style.display = nextRow.style.display === 'none' ? 'table-row' : 'none';
    } else {
        // 이미지 행이 없으면 새로운 행 생성
        const newRow = document.createElement('tr');
        newRow.classList.add('image-row2');
        const newCell = document.createElement('td');
        newCell.colSpan = row.cells.length;
        const img = document.createElement('img');
        img.src = imageUrl;
        img.alt = 'Report Removal Image';
        img.classList.add('large-image');
        newCell.appendChild(img);
        newRow.appendChild(newCell);
        row.parentNode.insertBefore(newRow, nextRow); // 다음 행이 아닌 그냥 다음에 삽입
    }

    // 버튼 텍스트 변경
    button.textContent = nextRow.style.display === 'none' ? '사진 보기' : '사진 숨기기';
}

async function handleAction(reportId, type, action) {
            try {
                console.log(reportId, type, action)
                console.log(`manager/report/${action}`)
                const response = await fetch(`${action}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ reportId, type })
                });
                const result = await response.json();
                if (result.success) {
                    alert(`Report ${action}d successfully!!!!!!!!!!!!!!!!!!!!!!!!!!!!`);
                    location.reload();
                } else {
                    alert(`Failed to ${action} report`);
                    location.reload();
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while processing your request.');
                location.reload();
            }
        }
    </script>
</body>
</html>